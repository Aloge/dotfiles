#!/bin/sh

# Hide or show OS X hidden files

if [ `defaults read com.apple.finder AppleShowAllFiles` == 0 ]; then
	echo "Hidden files are now visible"
	defaults write com.apple.finder AppleShowAllFiles -bool true
else
	echo "Hidden files are now hidden"
	defaults write com.apple.finder AppleShowAllFiles -bool false
fi

# Quit Finder
exec osascript <<EOF
  tell app "Finder"
  	quit
  end tell
EOF

# Activate Finder
exec osascript <<EOF
  tell app "Finder"
  	activate
  end tell
EOF